<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper"
    tools:context="com.example.gustavo.destinybd.WarlockArmorMenu">

    <Button
        android:id="@+id/WarlockHelmetButton"
        android:text="@string/helmet"
        android:layout_width="172dp"
        android:layout_height="155dp"
        android:background="@drawable/destinywarlockhemelt1"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/WarlockArmsButton"
        android:text="@string/helmet"
        android:layout_width="172dp"
        android:layout_height="155dp"
        android:background="@drawable/admonisher_iii"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/WarlockHelmetButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/WarlockChestButton"
        android:text="@string/chest"
        android:layout_width="172dp"
        android:layout_height="155dp"
        android:background="@drawable/affentheater_cla"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_margin="2dp"
        android:layout_below="@+id/WarlockHelmetButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/WarlockLegsButton"
        android:text="@string/legs"
        android:layout_width="172dp"
        android:layout_height="155dp"
        android:background="@drawable/amr7_2020"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_margin="2dp"
        android:layout_below="@+id/WarlockArmsButton"
        android:layout_alignStart="@+id/WarlockArmsButton" />

</RelativeLayout>
