<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper"
    tools:context="com.example.gustavo.destinybd.ItemsMenu">

    <Button
        android:id="@+id/ButtonPrimaryWeapons"
        android:text="@string/primaryWeapons"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_margin="2dp"
        android:background="@drawable/primary_weapons"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:onClick="openPrimaryWeaponIndex"/>

    <Button
        android:id="@+id/ButtonSpecialWeapons"
        android:text="@string/specialWeapons"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_below="@+id/ButtonPrimaryWeapons"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:background="@drawable/special_weapons"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:onClick="openSpecialWeaponIndex"/>

    <Button
        android:id="@+id/ButtonHeavyWeapons"
        android:text="@string/heavyWeapons"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_below="@+id/ButtonSpecialWeapons"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:background="@drawable/heavy_weapons"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:onClick="openHeavyWeaponIndex" />

    <Button
        android:id="@+id/ButtonWarlockArmor"
        android:text="@string/warlock_armor"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_above="@+id/ButtonSpecialWeapons"
        android:layout_toEndOf="@+id/ButtonPrimaryWeapons"
        android:layout_margin="2dp"
        android:background="@drawable/warlock_armor"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:onClick="openWarlockArmoMenu" />

    <Button
        android:id="@+id/ButtonHunterArmor"
        android:text="@string/hunter_armor"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:background="@drawable/hunter_armor"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"

        android:layout_alignTop="@+id/ButtonSpecialWeapons"
        android:layout_alignStart="@+id/ButtonWarlockArmor"
        android:layout_alignEnd="@+id/ButtonWarlockArmor" />

    <Button
        android:id="@+id/ButtonTitanArmor"
        android:text="@string/titan_armor"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:background="@drawable/titan_armor"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"

        android:layout_alignTop="@+id/ButtonHeavyWeapons"
        android:layout_alignStart="@+id/ButtonHunterArmor"
        android:layout_alignEnd="@+id/ButtonHunterArmor" />


</RelativeLayout>
