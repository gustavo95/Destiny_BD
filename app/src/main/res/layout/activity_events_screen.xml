<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper"
    tools:context="com.example.gustavo.destinybd.EventsScreen">

    <Button
        android:id="@+id/raid"
        android:text="raid"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:background="@drawable/raid"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/xur"
        android:text="xur"
        android:layout_width="180dp"
        android:layout_height="175dp"
        android:background="@drawable/xur"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/raid"
        android:layout_toStartOf="@+id/prison"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/prison" />

    <Button
        android:id="@+id/prison"
        android:text="prison"
        android:layout_width="170dp"
        android:layout_height="175dp"
        android:background="@drawable/prison"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginTop="2dp"
        android:layout_margin="2dp"
        android:layout_below="@+id/raid"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/trial"
        android:text="trial"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:background="@drawable/trial"
        android:gravity="bottom"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/background_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="12"
        android:layout_marginTop="2dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/xur"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
